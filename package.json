{
	"name": "playlisthaven",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"prettier": "prettier --write .",
		"eslint": "eslint src --fix",
		"format": "npm run prettier && npm run eslint",
		"prepare": "husky install",
		"prisma:reset": "npx prisma migrate reset --force",
		"prisma:nuke": "npx rimraf prisma/migrations && npx prisma migrate reset --force && npx prisma migrate dev --name init",
		"test": "vitest"
	},
	"lint-staged": {
		"src/**/*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"src/**/*.{css,scss,md,json}": [
			"prettier --write"
		]
	},
	"dependencies": {
		"@prisma/client": "^6.12.0",
		"@radix-ui/react-dialog": "^1.1.14",
		"@radix-ui/react-dropdown-menu": "^2.1.15",
		"@radix-ui/react-navigation-menu": "^1.2.13",
		"@radix-ui/react-slot": "^1.2.3",
		"@radix-ui/react-tooltip": "^1.2.7",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.526.0",
		"next": "^15.3.5",
		"next-themes": "^0.4.6",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"tailwind-merge": "^3.3.1"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3",
		"@tailwindcss/postcss": "^4",
		"@testing-library/jest-dom": "^6.6.4",
		"@testing-library/react": "^16.3.0",
		"@types/node": "^24.0.0",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"eslint": "^9",
		"eslint-config-next": "^15.3.5",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"husky": "^9.1.7",
		"jsdom": "^26.1.0",
		"lint-staged": "^16.1.2",
		"prettier": "^3.6.2",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"prisma": "^6.12.0",
		"rimraf": "^6.0.1",
		"tailwindcss": "^4",
		"tw-animate-css": "^1.3.5",
		"typescript": "^5",
		"vitest": "^3.2.4"
	}
}
