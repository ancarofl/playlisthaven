generator client {
    provider = "prisma-client-js"
    output   = "../src/generated/prisma"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// TODO: Table name?
// TODO: Do I really wanna do this camelCase / snake_case thingy...?
model GuestSession {
    id           String   @id @default(cuid())
    createdAt    DateTime @default(now()) @map("created_at")
    expiresAt    DateTime @map("expires_at")
    spotifyToken String?  @map("spotify_token")
    youtubeToken String?  @map("youtube_token")

    @@map("guest_session") // Prisma default is singural model and table names
}
